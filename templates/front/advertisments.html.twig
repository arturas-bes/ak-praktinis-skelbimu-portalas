{% extends 'front/base.html.twig' %}
{% block main %}
{% if advertisments %}
    {% for post in advertisments %}
            <div class="row">
        <div  class="col-md-12 blog-post">
            <div  class="card mb-4 mb-20">
                <h4 class=" card-title p-2">{{post.title}}</h4>
                <div style="display: flex; flex-direction: row; align-items: center; justify-content: center;" class="card-body">
                    <img  style="max-width: 250px; margin: 0 auto; " class="card-img-top" src="{{ absolute_url(asset(post.imagePath)) }}" alt="Card image cap">
                    <p style="padding: 20px" class="card-text">
                        {{ post.subject|hacksaw(hack='characters', limit='200') }}
                    </p>
                </div>
                <a  href="{{ path('single_adv',{'adv': post.id}) }}" class="btn btn-outline-secondary m-3">Į skelbimą</a>
                <div class="card-footer text-muted">
                    <small>paskelbta  {{ post.createdAt|date('Y-m-d') }}</small> </a>
                </div>
            </div>
        </div>
            </div>
    {% endfor %}
    </div>
{% endif %}
{% endblock %}